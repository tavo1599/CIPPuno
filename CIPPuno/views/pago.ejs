<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://unpkg.com/alpinejs/dist/cdn.min.js" defer></script>
    <title>Pago</title>
  </head>
  <body class="bg-cover" style="background-image: url('img/personapaga.jpg')">
    <%- include('partials/col-navbar'); %>

    <div x-data="{ open: false }">
      <div class="mb-40">
        <div
          class="mt-32 contenedor mx-auto flex justify-center flex-wrap space-x-9"
        >
          <h1 class="text-4xl mt-20 text-red-800 font-bold">Pago en Linea</h1>
          <div class="flex flex-col border bg-slate-900 p-8">
            <h2 class="flex justify-center text-white text-xl font-semibold">
              Realizar Pago
            </h2>
            <img src="img/pagos.jpg" width="650px" />
            <div class="contenedor mx-auto">
              <button
                @click="open = ! open"
                type="button"
                class="bg-red-700 px-72 py-4 text-white"
              >
                Pagar
              </button>
            </div>
          </div>
        </div>
      </div>
      <div
        x-show="open"
        @click.outside="open = false"
        class="modal-space-container flex justify-center mb-10"
      >
        <div class="bg-red-600 p-3 px-5">
          <div class="py-3">
            <h1 class="py-3 font-bold text-4xl text-center">
              Detalles de Pago
            </h1>
            <div
              class="bg-slate-50 shadow-xl modal-container inline-block rounded-lg p-9"
            >
              <table class="border-separate border-spacing-7 table-auto">
                <tbody>
                  <tr>
                    <td>Codigo Transaccion</td>
                    <td>
                      <input
                        class="bg-slate-500 rounded-md text-lg text-black"
                        type="445646546"
                      />
                    </td>
                  </tr>
                  <tr>
                    <td>Comercio:</td>
                    <td>
                      CONSEJO DEPARTAMENTAL PUNO, <br />
                      DEL COLEGIO DE INGENIEROS DEL PERU
                    </td>
                  </tr>
                  <tr>
                    <td>Descripcion:</td>
                    <td>Pago de Cuotas ordinarias</td>
                  </tr>
                  <tr>
                    <td>Cantidad:</td>
                    <td>
                      <input
                        class="bg-slate-500 rounded-md text-lg text-black"
                        type="text"
                      />
                    </td>
                  </tr>
                  <tr>
                    <td>Cliente:</td>
                    <td>
                      <input
                        class="bg-slate-500 my-2 rounded-md text-lg text-black"
                        type="text"
                      />
                      <br />
                      <input
                        class="bg-slate-500 rounded-md text-lg text-black"
                        type="text"
                      />
                    </td>
                  </tr>
                  <tr>
                    <td>Email:</td>
                    <td>
                      <input
                        class="bg-slate-500 rounded-md text-lg text-black"
                        type="text"
                      />
                    </td>
                  </tr>
                  <tr>
                    <td>Importe Total:</td>
                    <td>
                      <input
                        class="bg-slate-500 rounded-md text-lg text-black"
                        type="text"
                      />
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <button
                        type="button"
                        class="text-black border-2 bg-white font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 focus:outline-none"
                      >
                        Cancelar
                      </button>
                      <button
                        type="button"
                        class="text-white bg-red-800 focus:ring-4 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 d focus:outline-none"
                      >
                        Confirmar
                      </button>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
